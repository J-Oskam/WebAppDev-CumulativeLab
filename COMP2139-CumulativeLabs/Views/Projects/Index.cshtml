@model List<Project>

@{
    ViewData["Title"] = "Projects"; //Overrides the Title tag that has default implementation in the _layout.cshtml file
}

<h2>Projects</h2>

<a class="btn btn-primary" asp-action="Create">Create Project</a>

@if (Model.Any()) { //If the model has any data then display the projects
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>

        @foreach(var project in Model){
            <tbody>
                <tr>
                    <td>@project.ProjectId</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@project.ProjectId">Details</a>
                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@project.ProjectId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@project.ProjectId">Delete</a>
                        <a class="btn btn-warning" asp-controller="Task" asp-action="Index" asp-route-id="@project.ProjectId">View Tasks</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
} else {
    <p>No projects found</p>
}